@model CreateCardDTO

@{
    ViewData["Title"] = "Edit";
}
<div class="d-flex justify-content-center align-items-center vh-100 flex-column">

    <h3>Edit Card</h3>
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div class="form-floating mb-3">
                <input asp-for="@Model.FrontText" class="form-control">
                <label class="form-label" asp-for="@Model.FrontText">Front Text</label>
            </div>
            <div class="mb-3">

                <input type="file" class="form-control" id="customFile" accept="image/jpeg, image/png" asp-for="@Model.FrontPicture" />
            </div>
            <div class="form-floating mb-3">
                <input asp-for="@Model.BackText" class="form-control">
                <label class="form-label" asp-for="@Model.BackText">Back Text</label>
            </div>
            <div class="mb-3">

                <input type="file" class="form-control" id="customFile" accept="image/jpeg, image/png" asp-for="@Model.BackPicture" />
            </div>
            <div class="form-floating mb-3">
                <select asp-for="@Model.CardType" class="form-control">
                    <option value="0" selected="selected">None</option>
                    <option value="1">Noun</option>
                    <option value="2">Verb</option>
                    <option value="3">Adjective</option>
                    <option value="4">Adverb</option>
                    <option value="5">Conjunction</option>
                    <option value="6">Phrase</option>
                    <option value="7">Preposition</option>
                    <option value="8">Other</option>
                </select>
                <label asp-for="@Model.CardType" class="form-label">Type (optional)</label>
            </div>
            <input type="hidden" asp-for="CreatorId" />
            <input type="hidden" asp-for="DeckId" />
            <input type="hidden" asp-for="FrontPictureUrl" />
            <input type="hidden" asp-for="BackPictureUrl" />
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
                <a class="btn btn-light" asp-controller="Decks" asp-action="Details" asp-route-id="@Model.DeckId">Back to Deck</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
