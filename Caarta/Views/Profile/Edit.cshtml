@model UserEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName">Username</label>
                <input pattern=".{5,}" required title="5 characters minimum" asp-for="UserName" m class="form-control"></input>
            </div>
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input type="email" asp-for="Email" class="form-control"></input>
            </div>
            <div class="form-group">
                <label asp-for="ProfilePicture">Profile Picture</label>
                <input type="file" accept="image/jpeg, image/png" asp-for="ProfilePicture"  class="form-control-file" />
            </div>
            <div class="form-group">
                <label asp-for="ColorThemeId" class="control-label"></label>
                <select asp-for="ColorThemeId" class="form-control">
                    <option value="1">Light Theme</option>
                    <option value="2">Crimson Theme</option>
                    <option value="3">Dark Theme</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
