@model CreateDeckDTO

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Deck</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <textarea asp-for="Name" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId">Category</label>
                <select asp-for="CategoryId" asp-items="Model.Categories" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="LanguageId">Language</label>
                <select asp-for="LanguageId" asp-items="Model.Languages" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="IsPublic">Visibility</label>
                <select asp-for="IsPublic" class="form-control">
                    <option value="true">Public</option>
                    <option value="false">Private</option>
                </select>
            </div>
            <input type="hidden" asp-for="CreatorId" />
            <input type="hidden" asp-for="TimeOfCreation" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
