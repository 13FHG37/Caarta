@model IEnumerable<DeckDTO>
@inject UserManager<AppUser> _userManager

@{
    ViewData["Title"] = "Index";
    var currentUser = await _userManager.GetUserAsync(User);
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Creator)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Language)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeOfCreation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Creator.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Language.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeOfCreation)
            </td>
            <td>
                @if (currentUser != null) {
                    if (currentUser.Saved.Any(i => i.DeckId == item.Id)) {
                        <a asp-action="Unsave" asp-route-id="@item.Id">Unsave</a>
                    }
                    else {
                        <a asp-action="Save" asp-route-id="@item.Id">Save</a>
                    }
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                } 
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> 
            </td>
        </tr>
}
    </tbody>
</table>
